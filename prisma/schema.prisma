generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// AUTH MODELS
// ============================================================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================================================
// USER & TEAM MODELS
// ============================================================================

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  emailVerified  DateTime?
  name           String?
  image          String?
  hashedPassword String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  accounts          Account[]
  sessions          Session[]
  ownedTeams        Team[]           @relation("TeamOwner")
  teamMemberships   TeamMember[]
  creditLedger      CreditLedger[]
  generations       Generation[]

  @@index([email])
}

model Team {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Subscription & Credits
  credits           Int      @default(0)
  subscriptionId    String?  @unique
  subscriptionStatus SubscriptionStatus @default(INACTIVE)
  currentPeriodEnd  DateTime?
  planId            String?

  // Relations
  owner             User           @relation("TeamOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members           TeamMember[]
  brands            Brand[]
  creditLedger      CreditLedger[]
  generations       Generation[]
  subscription      Subscription?

  @@index([ownerId])
  @@index([slug])
}

model TeamMember {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  role      TeamRole @default(MEMBER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([teamId])
  @@index([userId])
}

enum TeamRole {
  OWNER
  ADMIN
  MEMBER
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  INACTIVE
  TRIALING
}

// ============================================================================
// SUBSCRIPTION & BILLING MODELS
// ============================================================================

model Subscription {
  id                   String             @id @default(cuid())
  teamId               String             @unique
  stripeCustomerId     String
  stripeSubscriptionId String             @unique
  stripePriceId        String
  status               SubscriptionStatus @default(INACTIVE)
  currentPeriodStart   DateTime
  currentPeriodEnd     DateTime
  cancelAtPeriodEnd    Boolean            @default(false)
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([stripeCustomerId])
  @@index([stripeSubscriptionId])
}

model CreditLedger {
  id          String           @id @default(cuid())
  teamId      String
  userId      String?
  amount      Int              // positive = credit, negative = debit
  balance     Int              // running balance after this transaction
  type        CreditTransactionType
  description String
  metadata    Json?
  createdAt   DateTime         @default(now())

  team Team  @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([teamId])
  @@index([userId])
  @@index([createdAt])
}

enum CreditTransactionType {
  SUBSCRIPTION_GRANT    // Monthly credits from subscription
  PURCHASE              // One-time credit pack purchase
  GENERATION            // Deducted for content generation
  REFUND                // Refund for failed generation
  ADJUSTMENT            // Manual adjustment by admin
  BONUS                 // Promotional bonus credits
}

// ============================================================================
// BRAND & PRODUCT MODELS
// ============================================================================

model Brand {
  id           String   @id @default(cuid())
  teamId       String
  name         String
  description  String?
  targetAudience String?
  tonality     String[] @default([])
  usps         String[] @default([])
  noGos        String[] @default([])
  language     String   @default("de")
  region       String   @default("DE")
  industry     Industry @default(OTHER)
  logoUrl      String?
  websiteUrl   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  team        Team         @relation(fields: [teamId], references: [id], onDelete: Cascade)
  products    Product[]
  generations Generation[]

  @@index([teamId])
}

model Product {
  id           String   @id @default(cuid())
  brandId      String
  name         String
  description  String?  @db.Text
  price        String?
  currency     String   @default("EUR")
  benefits     String[] @default([])
  objections   String[] @default([])
  reviews      String[] @default([])
  sourceUrl    String?
  imageUrls    String[] @default([])
  metadata     Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  brand       Brand        @relation(fields: [brandId], references: [id], onDelete: Cascade)
  generations Generation[]

  @@index([brandId])
}

enum Industry {
  BEAUTY
  FITNESS
  SAAS
  FOOD
  LOCAL_SERVICE
  EVENTS
  ECOMMERCE
  FASHION
  HEALTH
  FINANCE
  EDUCATION
  TRAVEL
  OTHER
}

// ============================================================================
// GENERATION MODELS
// ============================================================================

model Generation {
  id           String           @id @default(cuid())
  teamId       String
  userId       String
  brandId      String
  productId    String?
  templateId   String?
  status       GenerationStatus @default(PENDING)

  // Input Configuration
  platform     Platform         @default(TIKTOK)
  goal         AdGoal           @default(SALES)
  style        AdStyle          @default(CASUAL)
  duration     Int              @default(30) // seconds
  language     String           @default("de")

  // Generated Content (stored as JSON)
  hooks        Json?            // Array of hook variants
  scripts      Json?            // Array of full scripts
  shotlist     Json?            // Recording instructions
  voiceover    Json?            // Voiceover text
  captions     Json?            // SRT format captions
  ctas         Json?            // Call-to-action variants
  objectionHandling Json?       // Objection handling lines
  adCopy       Json?            // Ad copy for Meta/TikTok

  // Metadata
  creditsUsed  Int              @default(0)
  errorMessage String?
  jobId        String?          // BullMQ job ID
  completedAt  DateTime?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  team     Team      @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  brand    Brand     @relation(fields: [brandId], references: [id], onDelete: Cascade)
  product  Product?  @relation(fields: [productId], references: [id], onDelete: SetNull)
  template Template? @relation(fields: [templateId], references: [id], onDelete: SetNull)
  exports  Export[]

  @@index([teamId])
  @@index([userId])
  @@index([brandId])
  @@index([status])
  @@index([createdAt])
}

enum GenerationStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum Platform {
  TIKTOK
  INSTAGRAM_REELS
  YOUTUBE_SHORTS
}

enum AdGoal {
  SALES
  LEADS
  APP_INSTALL
  AWARENESS
  ENGAGEMENT
}

enum AdStyle {
  CASUAL
  PROFESSIONAL
  GENZ
  HUMOROUS
  EMOTIONAL
  EDUCATIONAL
}

// ============================================================================
// TEMPLATE MODELS
// ============================================================================

model Template {
  id          String   @id @default(cuid())
  name        String
  description String?
  industry    Industry
  platform    Platform @default(TIKTOK)
  goal        AdGoal   @default(SALES)
  style       AdStyle  @default(CASUAL)
  duration    Int      @default(30)

  // Template content
  hookTemplates    String[] @default([])
  scriptStructure  Json?
  shotlistTemplate Json?
  ctaTemplates     String[] @default([])

  isPublic    Boolean  @default(true)
  usageCount  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  generations Generation[]

  @@index([industry])
  @@index([isPublic])
}

// ============================================================================
// EXPORT MODELS
// ============================================================================

model Export {
  id           String       @id @default(cuid())
  generationId String
  format       ExportFormat
  fileName     String
  fileUrl      String?
  fileSize     Int?
  createdAt    DateTime     @default(now())

  generation Generation @relation(fields: [generationId], references: [id], onDelete: Cascade)

  @@index([generationId])
}

enum ExportFormat {
  JSON
  MARKDOWN
  SRT
  TXT
  ZIP
}

// ============================================================================
// ANALYTICS (MINIMAL)
// ============================================================================

model AnalyticsEvent {
  id        String   @id @default(cuid())
  teamId    String?
  eventType String
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([teamId])
  @@index([eventType])
  @@index([createdAt])
}
